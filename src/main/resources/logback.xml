<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="LOGS" value="./logs" />
	<conversionRule conversionWord="tid" converterClass="com.fss.airtel.logback.ThreadIdLoggingConverter" />
	<conversionRule conversionWord="cid" converterClass="com.fss.airtel.logback.ClassLoggingConverter" />
	
	<appender name="console"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>[%date{HH:mm:ss.SSS}][%tid] %C{1}.%M\(%L\) %m%n</Pattern>
		</layout>
	</appender>
	
	<appender name="consolex"
		class="org.kst.logback.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>[%date{HH:mm:ss.SSS}][%tid] %m%n</Pattern>
		</layout>
	</appender>
	

	<appender name="file" class="ch.qos.logback.core.FileAppender">
		<append>true</append>
		<file>${LOGS}/logback.log</file>
			<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>[%date{HH:mm:ss.SSS}][%tid] %C{1}.%M\(%L\) %m%n</Pattern>
		</encoder>
	</appender>
	
	<!-- LOG everything at INFO level -->
	<root level="debug">
		<appender-ref ref="file" />
		<appender-ref ref="console" />
	</root>
	
	<logger name="oracle.sql" level="debug" additivity="false">
		<appender-ref ref="file" />
		<appender-ref ref="console" />
	</logger>
	
	<logger name="org.kst.logback.LoggerPrintStream" level="trace" additivity="false">
		<appender-ref ref="file" />
		<appender-ref ref="consolex" />
	</logger>

</configuration>